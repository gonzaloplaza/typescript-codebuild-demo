{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": ".",
      "outDir": "./dist",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "lib": [
        "esnext"
      ],
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "plugins": []
    },
    "include": [
      "bin/*",
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "dist"
    ]
  }